package com.app.neo;

import java.util.Scanner;

public class RomanStringClass {
	
	public static int getRomanValueString(String str) {
		String updatedString = str.toUpperCase();
		for(int i=0; i<=updatedString.length()-1;i++) {
			if(updatedString.charAt(i) == 'I')
				return 1;
		    else if(updatedString.charAt(i) == 'V')
				return 5;
		    else if(updatedString.charAt(i) == 'X')
		    	return 10;
		    else if(updatedString.charAt(i) == 'L')
		    	return 50;
		    else if(updatedString.charAt(i) == 'C')
		    	return 100;
		    else if(updatedString.charAt(i) == 'D')
		    	return 500;
		    else if(updatedString.charAt(i) == 'M')
		    	return 1000;
		}
		return 0;
		
	}
	
